{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "protocol": "inspector",
            "restart": true
        },
        {
            "type": "pwa-chrome",
            "name": "Chrome Launch",
            "request": "launch",
            "url": "http://localhost:3000",
            "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
        }
    ]
}